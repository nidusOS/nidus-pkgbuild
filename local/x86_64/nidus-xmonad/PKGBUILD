# Maintainer: Chris Brame <polonel@gmail.com>
pkgname=polonel-xmonad
_pkgname=dotfiles/arch
pkgver=1.r7.c9514ad
pkgrel=1
epoch=
pkgdesc="The default xmonad configuration for polonel."
arch=('x86_64')
url="https://www.github.com/polonel/dotfiles.git"
license=('GPL3')
groups=()
depends=(xmonad xmonad-contrib)
makedepends=(git)
checkdepends=()
optdepends=()
provides=(polonel-xmonad)
conflicts=()
replaces=()
backup=()
options=()
install=${pkgname}.install
changelog=
source=("git+$url")
noextract=()
md5sums=('SKIP')
validpgpkeys=("A9BD1529E1358D07")

pkgver() {
	cd "${_pkgname}"
    printf "1.r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

package() {
    cd dotfiles/arch/
    sudo rm -rf /etc/polonelconf/.xmonad/
    install -d ${pkgdir}/etc/polonelconf/.xmonad/
    cp -r ${srcdir}/${_pkgname}/etc/polonelconf/.xmonad/* ${pkgdir}/etc/polonelconf/.xmonad/
    #install -Dm644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
    #install -Dm644 README.org "${pkgdir}/usr/share/doc/${pkgname}/README.org"
}

